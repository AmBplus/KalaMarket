@model IEnumerable<KalaMarket.Application.HomePage.HomePage.Common.Query.GetSlidersForSite.GetSlidersForSiteDto>
@{
    byte numLi = 0;
    byte num = 0;
}
<div class="slider-main-container d-block">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @foreach (var slider in Model)
            {
                if (numLi < 1)
                {
                    
                    <li data-target="#carouselExampleIndicators" data-slide-to="@numLi" class="active"></li>
                }
                else
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@numLi"></li>
                }
                numLi++;
            }
        </ol>
        <div class="carousel-inner">
            @foreach (var slider in Model)
            {
                if (num < 1)
                {
                    num++;
                    <div class="carousel-item active">
                        <a href="#"><img src="~/@slider.Src" class="d-block w-100" alt="@slider.Link"></a>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <a href="#"><img src="~/@slider.Src" class="d-block w-100" alt="@slider.Link"></a>
                    </div>
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="fa fa-angle-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="fa fa-angle-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>