@model IEnumerable<KalaMarket.Application.Product.Services.ProductAgg.Common.Query.GetMenuItemService.GetMenuItemDto>

@{
    Layout = null;
}

@foreach (var item in Model)
{
    <li id="nav-menu-item" class="menu-item nav-overlay">
        <a href="#" class="current-link-menu">
            @item.Name
        </a>

        @if (item.Child.Count() > 0)
        {
            <ul class="sub-menu is-mega-menu-small">

                @foreach (var itemChild in item.Child)
                {
                    <li class="menu-mega-item menu-item-type-mega-menu item-small">
                        <a href="~/site/products/index?categoryId=@itemChild.CategoryId" class="mega-menu-link">
                            @itemChild.Name
                        </a>
                    </li>
                }
            </ul>
        }

    </li>
}